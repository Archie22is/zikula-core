<form id="theme_search" method="post" action="{{ path('zikulasearchmodule_user_search') }}">
    <div>
        <input id="block_search_q" type="search" name="q" size="20" maxlength="255" results="10" autosave="Search" class="theme_search_input" />
        {% if vars.displaySearchBtn == 1 %}
        <input class="theme_search_button" type="submit" value="{{ __('Search', 'zikula') }}" />
        {% endif %}
        <div style="display: none;">
            {% for plugin, plugin_option in plugin_options %}
            {{ plugin_option }}
            {% endfor %}
        </div>
        {# @TODO searchvartofieldnames data=$modvars.ZikulaSearchModule prefix="modvar" assign="modvariables" #}
        {% for name, value in modvariables %}
        <input type="hidden" name="{{ name }}" value="{{ value }}" />
        {% endfor %}
    </div>
</form>

